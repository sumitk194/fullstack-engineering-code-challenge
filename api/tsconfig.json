{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@logger/*": ["utils/logger/*"],
      "@auth/*": ["utils/auth/*"],
      "@role/*": ["utils/role/*"],
      "@config/*": ["utils/config/*"],
      "@modules/*": ["modules/*"],
      "@health/*": ["utils/health/*"],
      "@mongoose/*": ["utils/mongoose/*"],
      "@constants/*": ["utils/constants/*"],
      "@interceptors/*": ["utils/interceptors/*"],
      "@publishers/*": ["utils/publishers/*"]
    },
    "incremental": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}
